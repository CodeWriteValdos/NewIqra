                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="175dp"
                            android:text="@string/nilaiKontribusi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
