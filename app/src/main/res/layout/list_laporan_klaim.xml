<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relatif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblLap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/laporanKlaim"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblLap"
                android:layout_marginTop="10dp">

                <TableLayout
                    android:id="@+id/tabel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:padding="10dp"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jenisKlaim"
                            android:textColor="#FFF"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tglPengajuan"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tglOtorisasi"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/noBuktiKas"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/statusKlaim"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nilaiKlaim"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/namaKantor"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/namaKantor2"
                            android:textColor="#FFF"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                    </TableRow>

                    <TableRow
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/lblJenisKlaim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblTglPengajuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblTglOtorisasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblNomorBK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblStatusKlaim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblNilaiKlaim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblNamaKantor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/lblNamaKantor2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_horizontal" />

                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>